<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SteamApp.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#171a21" Padding="24" CornerRadius="0">
            <StackLayout Orientation="Horizontal">
                <Image Source="steamlogo.png" WidthRequest="30" ></Image>
                <Label Text= "Steam" HorizontalTextAlignment="Start" TextColor="WhiteSmoke" FontSize="Large"/>
            </StackLayout>
        </Frame>
        <Label Text="Welcome to Steam" FontSize="Title" Padding="30,10,30,10"/>
        <Label Text="Make changes to your XAML file and save to see your UI update in the running app with XAML Hot Reload. Give it a try!" FontSize="16" Padding="30,0,30,0"/>
        <Label FontSize="16" Padding="30,24,30,0">
            <Label.FormattedText>
                <FormattedString>
                    <FormattedString.Spans>
                        <Span Text="Learn more at "/>
                        <Span Text="https://aka.ms/xamarin-quickstart" FontAttributes="Bold"/>
                    </FormattedString.Spans>
                </FormattedString>
            </Label.FormattedText>
        </Label>
        
    </StackLayout

    
</ContentPage>
